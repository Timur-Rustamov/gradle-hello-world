pipeline {
  agent {
  label 'worker'
  }
  stages {
    stage('checkout'){
    	steps {
    checkout scm
  }
  }
    stage ('build'){
    	steps {
    gradle = tool 'gradle4'
    sh "${gradle}/bin/gradle build"
  		}
		}
	stage ('post'){
	steps {
addBadge(icon: 'completed.gif', text: 'OK')
  		}
	}

  
